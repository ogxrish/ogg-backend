generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GlobalData {
  id            Int    @id @default(0)
  uniqueWallets BigInt @default(0)
  longestStreak Int    @default(0)
}

model OgcGlobalData {
  id                  Int    @id @default(0)
  index               Int    @default(0)
  totalLocked         String @default("")
  totalUnlockable     String @default("")
  lastWinningReserves Int[]
}

model TopClaimedOgc {
  id      Int    @id @default(0)
  wallet  String
  active  String
  claimed String
}

model TopClaimedOgf {
  wallet   String @id
  claimed  Int    @default(0)
  timesBid Int    @default(0)
}

model OgfDailyData {
  id                  Int @id @default(autoincrement())
  totalBids           Int
  totalPoolSize       Int
  totalUnreleasedOgf  Int
  totalRepurchasedOgf Int
}

model IncrementalDataStepOgc {
  id             Int    @id
  dailyOgcReward String
  totalReserve   String
  totalReservers String
  unlockableOgg  String
  lockedOgg      String
}

model IncrementalDataStep {
  id           Int    @id
  reward       BigInt
  totalMiners  BigInt
  unclaimedOgg BigInt
  purchasedOgg BigInt
}

model Streak {
  wallet String @id
  length Int

  @@index([wallet])
}
